{{#each erros}}
   <div class="alert alert-danger">{{text}}</div>
{{else}}
{{/each}}

<div class="card">

    <div class="card-body">
        <h4 class="mt-2">Nova postagem</h4>
        <form action="/admin/postagens/nova" method="POST">
            <label for="titulo">Titulo: </label>
            <input type="text" name="titulo" class="form-control" placeholder="Titulo">
            <label for="titulo">Slug: </label>
            <input type="text" name="slug" class="form-control">
            <label for="descricao">Descricao :</label>
            <input type="text" name="descricao" class="form-control">
            <label for="conteudo">Titulo:</label>
            <textarea name="conteudo" class="form-control">Conteudo:</textarea>
            <label for="categoria">Categoria: </label>
            <select name="categoria" class="custom-select">
                {{#each categorias}}
                  <option value="{{_id}}">{{nome}}</option>
                {{else}}
                   <option value="0">Nenhuma categoria registrada</option>
                {{/each}}
            </select>
            <button class="btn btn-success mt-3" type="submit">Criar postagem</button>
        </form>
    </div>

</div>